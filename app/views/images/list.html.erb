<% @page_title = "#{t :listing} #{t :images}" %>

<table>
  <tr>
    <th></th>
  </tr>
  
<% for image in @images %>
  <tr>
    <td><img src="<%= url_for(:controller => 'images', :action => "show", :id => image) %>" height="100" /></td>
    <td><%= link_to 'Show', :action => 'show', :id => image %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => image %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => image }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%=will_paginate @images%>

<br />

<%= link_to 'New image', :action => 'new' %>
