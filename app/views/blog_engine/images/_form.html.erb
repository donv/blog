<p><label for="image_blog_id">Blog Entry</label><br/>
      <%= select("image", "blog_entry_id", BlogEntry.all.collect {|b| [ b.title, b.id ] }, {include_blank: true}) %>
</p>

<p><label for="image_picture_data">Picture data</label><br/>
      <%= file_field 'image', 'picture', :size =>3 %><br/>
<% if @image.picture_data %>
      <img src="<%= url_for(:controller => 'images', :action => "show", :id => @image) %>" height="100" />
<% end %>
</p>

