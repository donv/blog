<% @page_title = "Editing #{l :blog_entry}" %>
<% @page_subtitle = @blog_entry.title %>

<%= start_form_tag :action => 'update', :id => @blog_entry %>
  <%= render :partial => 'form' %>
  <%= submit_tag l :save %> |
  <%= link_to l(:back), :action => 'show', :id => @blog_entry %>
<%= end_form_tag %>
